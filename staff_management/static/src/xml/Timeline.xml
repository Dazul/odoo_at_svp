<t t-name="staff_timeline_quick_create">
	<div>
		<table class="quick_create_table">
			<tr>
				<td id="quickAssignTd">
					<input type="checkbox" class="quickassignCheckbox" id="quickassignInput"/>
					<label for="quickassignInput">Quick assign</label>
				</td>
				<td>
					<label for="task_id" class="qa_hide o_hidden">Task</label>
				</td>
				<td>
					<span id="task_id" class="qa_hide task_id o_hidden"/>
				</td>
				<td>
					<label class="qa_hide o_hidden" for="start_hourInput">Start Hour</label>
				</td>
				<td>
				    <div class="qa_hide o_hidden start_hour"></div>
					<!-- <input type="text" class="start_hour qa_hide o_hidden" id="start_hourInput" -->
				</td>
				<td>
					<label class="qa_hide o_hidden" for="start_hourInput">End Hour</label>
				</td>
				<td>
				    <div class="qa_hide o_hidden end_hour"></div>
					<!--  input type="text" class="end_hour qa_hide o_hidden" id="end_hourInput" -->
				</td>
			</tr>
		</table>
	</div>
</t>

<t t-name="staff_timeline_quick_create_timecheck">
	<div>
		<table>
			<tr>
				<td id="quickAssignTd">
					<input type="checkbox" class="quickassignCheckbox" id="quickassignInput"/>
					<label for="quickassignInput">Quick assign</label>
				</td>
				<td>
					<label class="qa_hide o_hidden" for="work_hourInput">Worked time</label>
				</td>
				<td class="qa_hide">
					<input type="text" class="work_hour qa_hide o_hidden" id="work_hourInput"/>
				</td>
			</tr>
		</table>
	</div>
</t>

